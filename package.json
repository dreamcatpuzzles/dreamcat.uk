{
  "name": "dreamcatuk",
  "description": "Dreamcat Puzzles website",
  "keywords": [
    "performance",
    "utilisation",
    "z-index",
    "zero-downtime",
    "Live Content API (LCAPI)",
    "editor"
  ],
  "homepage": "https://dreamcat.uk/",
  "bugs": {
    "url": "https://github.com/dreamcatpuzzles/dreamcat.uk/issues"
  },
  "workspaces": [
    "studio",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel --print-label dev:*",
    "dev:next": "npm run dev --workspace=frontend",
    "dev:studio": "npm run dev --workspace=studio",
    "format": "prettier --cache --write .",
    "generate-types": "npm run sanity:typegen --workspaces",
    "import-sample-data": "cd studio && sanity dataset import sample-data.tar.gz --replace",
    "lint": "npm run lint --workspace=frontend",
    "type-check": "npm run type-check --workspaces"
  },
  "prettier": "@sanity/prettier-config",
  "devDependencies": {
    "@sanity/prettier-config": "^2.0.2",
    "npm-run-all2": "^5.0.2",
    "prettier": "^3.7.3"
  }
}